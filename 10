//猜数游戏

#include<time.h>
#include<stdlib.h>
void menu()
{
	printf("************************************\n");
	printf("*****     1.play   0.exit      *****\n");
	printf("************************************\n");
}
void game()
{
	int ret = 0;
	int guess = 0;
	//1.生成一个随机数，2.猜数字
	//时间戳设置随机数的生成起点
	ret = rand()%100+1;//生成随机数
	//printf("%d\n", ret);
	while (1)
	{
		printf("请猜数字:>");
		scanf("%d", &guess);
		if (guess > ret)
		{
			printf("猜大了\n");
		}
		else if (guess < ret)
		{
			printf("猜小了\n");
		}
		else
		{
			printf("恭喜猜对了\n");
			break;
		}
	}
}
int main()
{
	int input = 0;
	srand((unsigned int)time(NULL));//时间戳设置随机数的生成起点
	do
	{ 
		menu();
		printf("请选择>:");
		scanf("%d", &input);
		switch(input)
		{
		case 1:
			game();
			break;
		case 0:
			printf("退出游戏\n");
			break;
		default:
			printf("选择错误\n");
			break;
		}
	} while (input);
	
	return 0;
}
